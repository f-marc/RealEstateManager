<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="12dp">

        <!-- TYPE -->
        <ImageView
            android:id="@+id/activity_detail_type_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_detail_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/type"
            android:textStyle="bold"
            android:textColor="@color/colorDark"
            app:layout_constraintBottom_toBottomOf="@id/activity_detail_type_image"
            app:layout_constraintStart_toEndOf="@id/activity_detail_type_image"
            app:layout_constraintTop_toTopOf="@id/activity_detail_type_image" />

        <TextView
            android:id="@+id/activity_detail_type_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/star"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/activity_detail_type_text"
            app:layout_constraintTop_toTopOf="@id/activity_detail_type_text" />

        <EditText
            android:id="@+id/activity_detail_type_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_type_image" />

        <!-- PRICE -->
        <ImageView
            android:id="@+id/activity_detail_price_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/currency_usd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_type_edit" />

        <TextView
            android:id="@+id/activity_detail_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/price"
            android:textStyle="bold"
            android:textColor="@color/colorDark"
            app:layout_constraintBottom_toBottomOf="@id/activity_detail_price_image"
            app:layout_constraintStart_toEndOf="@id/activity_detail_price_image"
            app:layout_constraintTop_toTopOf="@id/activity_detail_price_image" />

        <TextView
            android:id="@+id/activity_detail_price_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/star"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/activity_detail_price_text"
            app:layout_constraintTop_toTopOf="@id/activity_detail_price_text" />

        <EditText
            android:id="@+id/activity_detail_price_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_price_image" />

        <!-- Address -->
        <ImageView
            android:id="@+id/activity_detail_address_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_marker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_price_edit" />

        <TextView
            android:id="@+id/activity_detail_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/address"
            android:textStyle="bold"
            android:textColor="@color/colorDark"
            app:layout_constraintBottom_toBottomOf="@id/activity_detail_address_image"
            app:layout_constraintStart_toEndOf="@id/activity_detail_address_image"
            app:layout_constraintTop_toTopOf="@id/activity_detail_address_image" />

        <TextView
            android:id="@+id/activity_add_address_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/star"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/activity_detail_address_text"
            app:layout_constraintTop_toTopOf="@id/activity_detail_address_text" />

        <EditText
            android:id="@+id/activity_detail_address_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_address_image" />

        <!-- BUTTON -->
        <Button
            android:id="@+id/activity_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="@string/edit"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_address_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>