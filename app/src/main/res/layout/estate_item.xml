<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragment_main_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/fragment_main_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fragment_main_item_image"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Maison"/>

        <TextView
            android:id="@+id/fragment_main_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fragment_main_item_image"
            app:layout_constraintTop_toBottomOf="@id/fragment_main_item_type"
            app:layout_constraintBottom_toTopOf="@id/fragment_main_item_price"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:text="Paris"/>

        <TextView
            android:id="@+id/fragment_main_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fragment_main_item_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="1'000'000$"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>