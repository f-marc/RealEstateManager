<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@color/backgroundCard"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">

            <ImageView
                android:id="@+id/fragment_main_item_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_main_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Maison"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorDark"
                app:layout_constraintStart_toEndOf="@id/fragment_main_item_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_main_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Paris"
                android:textSize="14sp"
                android:textColor="@color/colorDark"
                app:layout_constraintBottom_toTopOf="@id/fragment_main_item_price"
                app:layout_constraintStart_toEndOf="@id/fragment_main_item_image"
                app:layout_constraintTop_toBottomOf="@id/fragment_main_item_type" />

            <TextView
                android:id="@+id/fragment_main_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="1'000'000$"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/fragment_main_item_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>